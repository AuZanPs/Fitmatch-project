{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": false,
    "outDir": "./dist/server",
    "rootDir": "./server"
  },
  "include": [
    "server/**/*",
    "shared/**/*"
  ],
  "exclude": ["node_modules", "dist", "client/**/*"]
}
